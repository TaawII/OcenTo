extends ../layout

block content
  h1 Oceny i komentarze dla przedmiotu #{itemId} w wydarzeniu #{eventId}

  if ratings.length === 0
    p Brak ocen i komentarzy dla tego przedmiotu.
  else
    table
      thead
        tr
          th ID
          th Użytkownik
          th Ocena
          th Komentarz
      tbody
        each rating in ratings
          tr
            td= rating.id
            td= rating.user
            td= rating.rating_value
            td= rating.comment
            td
              form(method="post", action=`/admin/allevents/${eventId}/items/${itemId}/ratings/${rating.id}?_method=DELETE`)
                button(type="submit" class="btn btn-danger") Usuń


  a(href=`/admin/allevents/${eventId}/items`) Powrót do listy przedmiotów
