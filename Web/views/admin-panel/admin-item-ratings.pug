extends ../layout

block content
  h1 Oceny i komentarze dla przedmiotu #{itemId} w wydarzeniu #{eventId}

  if ratings.length === 0
    p Brak ocen i komentarzy dla tego przedmiotu.
  else
    table
      thead
        tr
          th Użytkownik
          th Ocena
          th Komentarz
      tbody
        each rating in ratings
          tr
            td= rating.user
            td= rating.rating_value
            td= rating.comment

  a(href=`/admin/allevents/${eventId}/items`) Powrót do listy przedmiotów
